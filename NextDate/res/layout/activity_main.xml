<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.MainActivity" >

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/clac"
        android:layout_alignBottom="@+id/clac"
        android:layout_alignRight="@+id/editText_day"
        android:text="清零" />

    <Button
        android:id="@+id/clac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hint"
        android:layout_toLeftOf="@+id/clear"
        android:text="计算" />

    <EditText
        android:id="@+id/editText_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText_month"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText_year"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_day"
        android:layout_alignParentRight="true"
        android:layout_below="@id/editText_day" >
    </EditText>

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/clac"
        android:layout_below="@+id/editText_result"
        android:layout_marginTop="23dp"
        android:text="TextView"
        android:textColor="@id/hint"
        android:textColorHint="@id/hint" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_year"
        android:layout_alignParentLeft="true"
        android:text="请输入年" />

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_month"
        android:layout_alignParentLeft="true"
        android:text="请输入月" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editText_day"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/editText_day"
        android:text="请输入日" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hint"
        android:layout_alignRight="@+id/month"
        android:text="结果" />

</RelativeLayout>